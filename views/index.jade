!!! 5
html(lang="en")
	head
		title InfoMachine 2
		- var scriptPath = 'client';
		- var libPath 	 =  scriptPath + '/lib';
		- var extPath 	 =  libPath + '/ext-4.0-beta2';
		- var stylePath  = 'static/styles';
		- var extStyles  =  extPath + 'resources/css/ext-all';
		- var styles 	 = [extStyles,'canvas','infomachine'];
		- each sheet in styles
			link(rel=sheet+".css")
		
		
		// ExtJS 4
		script(src=extPath+'/bootstrap.js', type="text/javascript")

		// jQuery
		script(type="text/javascript", src=libPath+'/jquery-1.5.1.min.js')


		// App and InfoMachine
		script(type="text/javascript", src=scriptPath+"/app.js")
		script(type="text/javascript")
			App.baseUrl = '/localhost/infomachine2'; 
			App.scriptsUrl = '/scripts'; 
			App.setEndpoint('upload','../upload.php');
			App.setEndpoint('save','workspaces/save');
		
		// Canvas workspace
		- var scripts = ['workspace','objects/objects', 'objects/element', 'objects/vector', 'objects/semantics','tools/tools','tools/draw','tools/annotate','console','canvas'];
		- each script in scripts
			script(type="text/javascript", src=scriptPath+'/'+script+'.js')
	
	body
		div#loading_mask
			div#loading
				img(src="static/icons/loading.gif", alt="loading")
				span
				| Loading...
				